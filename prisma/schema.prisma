datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  description String
  stock       Int
  orders      Order[] @relation("ProductOrders") // Relação com Orders
}

model Order {
  id         Int      @id @default(autoincrement())
  productId  Int
  product    Product  @relation("ProductOrders", fields: [productId], references: [id])
  quantity   Int
  totalPrice Float
  status     String
  createdAt  DateTime @default(now())
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       String   @defalt("user")
  createdAt DateTime  @defalt(now())
}