datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  stock       Int
  description String?
  orders      Order[] @relation("ProductOrders") // Relacionamento com Order
}

model Order {
  id         Int      @id @default(autoincrement())
  productId  Int
  product    Product  @relation("ProductOrders", fields: [productId], references: [id])
  quantity   Int
  totalPrice Float
  status     String
  createdAt  DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique 
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
